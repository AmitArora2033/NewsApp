<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_news_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_normal"
    android:layout_marginLeft="@dimen/padding_large"
    android:layout_marginRight="@dimen/padding_large"
    android:layout_marginTop="@dimen/padding_normal"
    android:elevation="@dimen/padding_small"
    app:cardCornerRadius="@dimen/padding_small"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
    <ImageView
        android:id="@+id/img_news"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />


    <RelativeLayout
        android:id="@+id/ll_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/drawable_text_background"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_medium"
        >

      <TextView
          android:id="@+id/tv_headline"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_marginBottom="@dimen/padding_normal"
          android:paddingTop="@dimen/padding_small"
          android:textAppearance="@style/caption"
          tools:text="Headline"
          />

      <TextView
          android:id="@+id/tv_subhead"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_below="@id/tv_headline"
          android:layout_marginBottom="@dimen/padding_normal"
          android:layout_marginTop="@dimen/padding_normal"
          android:textAppearance="@style/subhead"
          tools:text="Headline"
          />

      <TextView
          android:id="@+id/tv_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/tv_headline"
          android:layout_marginBottom="@dimen/padding_normal"
          android:layout_marginLeft="@dimen/padding_large"
          android:layout_marginTop="@dimen/padding_normal"
          android:layout_toRightOf="@id/tv_subhead"
          android:paddingBottom="@dimen/padding_normal"
          android:textAppearance="@style/subhead"
          tools:text="Date"
          />
    </RelativeLayout>


  </RelativeLayout>


</androidx.cardview.widget.CardView>

